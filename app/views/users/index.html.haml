- content_for :title, 'Users'
- content_for :action_bar do
  %span= link_to('Add a New User', new_user_path, :class => 'add')

%table
  %thead
    %tr
      %th Avatar
      %th Name
      %th.main Email
      %th Admin?
  %tbody
    - @users.each do |user|
      %tr
        %td= gravatar_tag user, :size => 50, :secure => true, :rating => :pg, :html => { :class => "gravatar" }
        %td.nowrap= link_to user.name, user_path(user)
        %td= user.email
        %td= user.admin? ? 'Y' : 'N'
= will_paginate @users, :previous_label => '&laquo; Previous', :next_label => 'Next &raquo;'
      